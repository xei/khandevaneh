<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/polling_background"
    tools:context="ir.tvnasim.khandevaneh.archive.ArchiveActivity" >

    <ir.tvnasim.khandevaneh.view.XeiTextView
        android:id="@+id/activityArchive_xeiTextView_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/polling_background"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold"
        app:locale="fa_IR"
        app:style="bold" />

    <ViewStub
        android:id="@+id/activityArchive_viewStub_archiveContext"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/activityArchive_xeiTextView_title" />

    <RelativeLayout
        android:id="@+id/activityArchive_relativeLayout_footer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/polling_background"
        android:visibility="gone" >

        <ir.tvnasim.khandevaneh.view.XeiButton
            android:id="@+id/activityArchive_xeiButton_comment"
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/background_button_statistics"
            android:text="ثبت نظر"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold"
            app:locale="fa_IR"
            app:style="bold"/>

        <ir.tvnasim.khandevaneh.view.XeiButton
            android:id="@+id/activityArchive_xeiButton_like"
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/background_button_poll"
            android:text="لایک"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold"
            app:locale="fa_IR"
            app:style="bold"/>

    </RelativeLayout>

</RelativeLayout>
