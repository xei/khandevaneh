<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_home"
    tools:context="ir.tvnasim.khandevaneh.home.HomeActivity" >

    <ir.tvnasim.khandevaneh.view.bannerslider.SliderView
        android:id="@+id/activityHome_slider_slider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_slider"
        android:layout_alignParentTop="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activityHome_recyclerView_menuItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activityHome_slider_slider" />

</RelativeLayout>
