<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ir.tvnasim.khandevaneh.leaderboard.LeaderboardActivity" >

    <View
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#e9cc15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary" >

        <ImageView
            android:id="@+id/ativityLeaderboard_imageView_userAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/background_splash"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/ativityLeaderboard_imageView_userAvatar">

            <TextView
                android:id="@+id/activityLeaderboard_textView_userExperience"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <TextView
                android:id="@+id/activityLeaderboard_textView_userName"
                android:layout_width="match_parent"
                android:layout_height="60dp" />


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
