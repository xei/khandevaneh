<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_leader_board"
    tools:context="ir.tvnasim.khandevaneh.leaderboard.LeaderBoardActivity" >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activityLeaderboard_recyclerView_leaders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/height_userRankSection"
        android:overScrollMode="never" />

    <RelativeLayout
        android:id="@+id/activityLeaderboard_relativeLayout_userExperience"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_userRankSection_with_blur"
        android:layout_alignParentBottom="true" >
        <include layout="@layout/layout_leaderboard_user" />
    </RelativeLayout>

</RelativeLayout>