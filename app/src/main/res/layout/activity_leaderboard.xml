<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ir.tvnasim.khandevaneh.leaderboard.LeaderBoardActivity" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_banner"
        android:background="#e9cc15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_userRankSection"
        android:layout_margin="@dimen/margin_userRankSection"
        android:padding="@dimen/padding_userRankSection"
        android:background="@drawable/background_rounded_corner" >

        <ImageView
            android:id="@+id/activityLeaderboard_imageView_userAvatar"
            android:layout_width="@dimen/dimen_userRankSection_userAvatar"
            android:layout_height="@dimen/dimen_userRankSection_userAvatar"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/activityLeaderboard_imageView_userAvatar"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/layoutToolbarScore_imageView_icon"
                    android:layout_width="@dimen/dimen_toolbar_score"
                    android:layout_height="@dimen/dimen_toolbar_score"
                    android:src="@drawable/ic_toolbar_experience" />

                <ir.tvnasim.khandevaneh.view.XeiTextView
                    android:id="@+id/activityLeaderboard_textView_userExperience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_userRankSection_userExperience"
                    android:gravity="center"
                    android:textSize="@dimen/textSize_userRankSection"
                    android:textStyle="bold"
                    android:textColor="@color/textColor_LightText"
                    app:locale="fa_IR"
                    app:style="bold"/>

            </LinearLayout>

            <ir.tvnasim.khandevaneh.view.XeiTextView
                android:id="@+id/activityLeaderboard_textView_userName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/textSize_userRankSection"
                android:textStyle="bold"
                android:textColor="@color/textColor_LightText"
                app:locale="fa_IR"
                app:style="bold" />

        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activityLeaderboard_recyclerView_leaders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

</LinearLayout>