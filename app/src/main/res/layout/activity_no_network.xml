<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/noNetwork_background"
    tools:context="ir.iconish.khandevaneh.app.NoNetworkActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_no_network"/>

        <ir.iconish.khandevaneh.view.XeiTextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:text="فکر کنم اینترنتت قطعه رفیق :("
            android:textColor="#fff"
            android:textSize="20sp"
            app:locale="fa_IR"
            app:style="bold"
            />

        <ir.iconish.khandevaneh.view.XeiButton
            android:id="@+id/activityNoNetwork_xeiButton_retry"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:text="تلاش دوباره"
            android:background="@drawable/background_button_participate"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold"
            app:locale="fa_IR"
            app:style="bold"
            />

        <ir.iconish.khandevaneh.view.XeiButton
            android:id="@+id/activityNoNetwork_xeiButton_checkSettings"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:text="بررسی تنظیمات"
            android:background="@drawable/background_button_participate"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold"
            app:locale="fa_IR"
            app:style="bold"
            />

    </LinearLayout>

</RelativeLayout>
