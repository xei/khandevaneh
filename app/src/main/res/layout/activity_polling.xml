<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="ir.tvnasim.khandevaneh.polling.PollingActivity">

    <ir.tvnasim.khandevaneh.view.XeiTextView
        android:id="@+id/activityPolling_xeiTextView_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/background_toolbar_polling"
        android:textColor="#fff"
        android:textSize="24dp"
        android:textStyle="bold"
        app:locale="fa_IR"
        app:style="bold" />

    <ir.tvnasim.khandevaneh.view.XeiTextView
        android:id="@+id/activityPolling_xeiTextView_description"
        android:lines="3"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_below="@+id/activityPolling_xeiTextView_title"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/background_toolbar_polling"
        android:textColor="#fff"
        android:textSize="@dimen/textSize_userRankSection"
        android:textStyle="bold"
        app:locale="fa_IR"
        app:style="bold" />
    
    <ListView
        android:id="@+id/activityPolling_listView_options"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activityPolling_xeiTextView_description"
        android:layout_above="@+id/activityPolling_relativeLayout_footer"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="56dp"
        android:paddingRight="56dp"
        android:background="@drawable/background_polling"
        android:divider="@null"
        android:dividerHeight="8dp"
        />
    
    <RelativeLayout
        android:id="@+id/activityPolling_relativeLayout_footer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_toolbar_polling">

        <ir.tvnasim.khandevaneh.view.XeiButton
            android:id="@+id/activityPolling_xeiButton_showStatistics"
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/background_button_statistics"
            android:text="مشاهده آمار"
            android:textColor="#ff0000"
            android:textSize="17sp"
            android:textStyle="bold"
            app:locale="fa_IR"
            app:style="bold"/>

        <ir.tvnasim.khandevaneh.view.XeiButton
            android:id="@+id/activityPolling_xeiButton_poll"
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/background_button_poll"
            android:text="ارسال"
            android:textColor="#ff0000"
            android:textSize="17sp"
            android:textStyle="bold"
            app:locale="fa_IR"
            app:style="bold"/>

    </RelativeLayout>

</RelativeLayout>
