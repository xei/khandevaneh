<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.iconish.khandevaneh.account.login.PhoneNoFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ir.iconish.khandevaneh.view.XeiEditText
            android:id="@+id/fragmentPhoneNo_xeiEditText_phoneNo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/background_edittext_phone"
            android:layout_marginTop="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:gravity="right|center_vertical"
            android:hint="شماره موبایل خود را وارد کنید!"
            android:textColorHint="@color/textColor_light"
            android:textColor="@color/textColor_light"
            android:inputType="phone"/>

        <ir.iconish.khandevaneh.view.XeiButton
            android:id="@+id/fragmentPhoneNo_xeiButton_send"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:background="@drawable/background_button_sendphone"
            android:text="ارسال"
            android:textColor="@color/textColor_light"
            android:textSize="@dimen/textSize_row_leaderBoard"
            android:textStyle="bold"
            app:locale="fa_IR"
            app:style="bold" />

    </LinearLayout>

</ScrollView>
