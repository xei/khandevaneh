<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ir.tvnasim.khandevaneh.account.login.PhoneNoFragment" >

    <ir.tvnasim.khandevaneh.view.XeiEditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/background_edittext_phone"
        android:layout_marginTop="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:gravity="right|center_vertical"
        android:hint="شماره موبایل خود را وارد کنید!"
        android:textColorHint="@color/textColor_LightText"
        android:textColor="@color/textColor_LightText"
        android:inputType="phone"/>

    <ir.tvnasim.khandevaneh.view.XeiButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_button_sendphone"
        android:text="ارسال"
        android:textColor="@color/textColor_LightText"
        android:textSize="@dimen/textSize_row_leaderBoard"
        android:textStyle="bold"
        app:locale="fa_IR"
        app:style="bold" />

</LinearLayout>
