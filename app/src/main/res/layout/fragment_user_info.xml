<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profileCompletion_background"
    tools:context="ir.tvnasim.khandevaneh.account.profile.UserInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ir.tvnasim.khandevaneh.view.XeiTextView
            android:id="@+id/fragmentUserInfo_xeiTextView_label"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:layout_gravity="right"
            android:gravity="right|center_vertical"
            android:text="نام:"
            android:textColor="@color/textColor_light"
            android:textSize="17sp"
            app:locale="fa_IR"
            app:style="bold"
            />

        <ir.tvnasim.khandevaneh.view.XeiEditText
            android:id="@+id/fragmentUserInfo_xeiTextView_value"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:gravity="right|center_vertical"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:textColor="@color/textColor_dark"
            android:background="@drawable/background_row_leaderboard"
            android:lines="1"
            android:singleLine="true"
            app:locale="fa_IR" />

        <ir.tvnasim.khandevaneh.view.XeiButton
            android:id="@+id/fragmentUserInfo_xeiButton_next"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:padding="8dp"
            android:background="@drawable/background_button_participate"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold"
            app:locale="fa_IR"
            app:style="bold"/>

    </LinearLayout>

</RelativeLayout>
