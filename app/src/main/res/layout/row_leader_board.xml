<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_row_leaderBoard"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/margin_row_leaderBoard"
    android:layout_marginLeft="@dimen/margin_row_leaderBoard"
    android:layout_marginRight="@dimen/margin_row_leaderBoard"
    android:padding="@dimen/padding_row_leaderBoard"
    android:gravity="center"
    android:weightSum="3"
    android:background="@drawable/background_rounded_corner" >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/rowLeaderBoard_simpleDraweeView_userAvatar"
        android:layout_width="@dimen/dimen_imageView_avatar"
        android:layout_height="@dimen/dimen_imageView_avatar"
        app:actualImageScaleType="centerInside"
        app:placeholderImage="@color/placeholder_fresco"
        app:placeholderImageScaleType="centerInside"
        app:failureImage="@drawable/logo"
        app:failureImageScaleType="centerInside"
        app:backgroundImage="@color/placeholder_fresco"
        app:roundedCornerRadius="4dp"
        app:roundingBorderWidth="2dp"
        app:roundingBorderColor="#fff" />

    <ir.tvnasim.khandevaneh.view.XeiTextView
        android:id="@+id/rowLeaderBoard_textView_userName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/textColor_LightText"
        android:textSize="@dimen/textSize_row_leaderBoard"
        android:textStyle="bold"
        app:locale="fa_IR"
        app:style="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center" >

        <ImageView
            android:id="@+id/layoutToolbarScore_imageView_icon"
            android:layout_width="@dimen/dimen_toolbar_score"
            android:layout_height="@dimen/dimen_toolbar_score"
            android:src="@drawable/ic_toolbar_experience" />

        <ir.tvnasim.khandevaneh.view.XeiTextView
            android:id="@+id/rowLeaderBoard_textView_userExperience"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_toolbar_score"
            android:gravity="center"
            android:textSize="@dimen/textSize_row_leaderBoard"
            android:textStyle="bold"
            android:textColor="@color/textColor_LightText"
            app:locale="fa_IR"
            app:style="bold" />

    </LinearLayout>

</LinearLayout>