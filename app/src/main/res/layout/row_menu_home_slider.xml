<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_slider" >

    <ir.iconish.khandevaneh.view.bannerslider.SliderView
        android:id="@+id/rowMenuHomeSlider_sliderView_slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true" />

    <com.rd.PageIndicatorView
        android:id="@+id/rowMenuHomeSlider_pageIndicatorView_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_bottom_indicator"
        app:piv_viewPager="@id/rowMenuHomeSlider_sliderView_slider"/>

</RelativeLayout>

