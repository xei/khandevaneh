<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp" >

    <ir.iconish.khandevaneh.view.XeiTextView
        android:id="@+id/rowPollingList_xeiTextView_title"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="81dp"
        android:paddingRight="73dp"
        android:gravity="right|center_vertical"
        android:background="#fff"
        android:textColor="@color/textColor_dark"
        android:textSize="@dimen/textSize_userRankSection"
        android:textStyle="bold"
        app:locale="fa_IR"
        app:style="bold" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/rowPollingList_simpleDraweeView_image"
        android:layout_width="@dimen/dimen_userRankSection_userAvatar"
        android:layout_height="@dimen/dimen_userRankSection_userAvatar"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        app:actualImageScaleType="centerInside"
        app:backgroundImage="@color/placeholder_fresco"
        app:failureImage="@drawable/logo"
        app:failureImageScaleType="centerInside"
        app:placeholderImage="@color/placeholder_fresco"
        app:placeholderImageScaleType="centerInside"
        app:roundAsCircle="true"
        app:roundingBorderColor="@color/border_avatar"
        app:roundingBorderWidth="@dimen/width_rounding_border_userRankSection_avatar" />

</RelativeLayout>